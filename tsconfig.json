{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"],
    "resolveJsonModule": true
  },
  "include": [
    "typings.d.ts",
    "src/server/**/*.ts",
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts"
  ]
}
